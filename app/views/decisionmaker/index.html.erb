<h1>Decisionmaker#index</h1>
<p>Find me in app/views/decisionmaker/index.html.erb</p>

<table>
	<tr>
		<th>
			No.
		</th>
		<th>
			Decisionmaker
		</th>
		<th>
			Has voted?
		</th>
	</tr>
		<% $i = 1 %>
		<% @decisionmaker.each do |dm| %>
	<tr>
		<td>
			<%= $i %> 
		</td>	
		<td>
			<%= dm.email %>
		</td>
		<td>
			<% if  UserDecisionroom.find_by(user_id: dm.id).has_voted then %>
			<%= "Yes" %>
			<% else %> 
			<%= "No" %>
			<% end %>
		</td>
	</tr>
	<% $i += 1 %>
	<%end %>
</table>
<%= link_to "Back", decisionroom_path(@decisionroom) %>