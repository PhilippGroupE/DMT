<h2>
	Decision Participants
</h2>
<table>
	<tr>
		<td>
			No.
		</td>
		<td>
			Name
		</td>
		<td>
			Email
		</td>
		<td>
			Has voted?
		</td>
		<td>
			Delete
		</td>
	</tr>
		<% $i = 1 %>
		<% @decisionroom.users.each do |dm| %>
	<tr>
		<td>
			<%= $i %> 
		</td>
		<td>
			<%= dm.name %>
		</td>
		<td>
			<%= dm.email %>
		</td>
		<td>
			<% if  User.find(dm.id).has_voted then %>
			<%= "Yes" %>
			<% else %> 
			<%= "No" %>
			<% end %>
		</td>
		<td>
			<%= link_to "Remove", decisionroom_user_path(decisionroom_token: @decisionroom.token, id: dm.id), :method => :delete %>
		</td>
	</tr>
	<% $i += 1 %>
	<%end %>
</table>
<%= link_to "Back", decisionroom_path(@decisionroom) %>