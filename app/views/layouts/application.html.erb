<!DOCTYPE html>
<html>
  <head>
    <title>deciVo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="landing">
    <div id="page-wrapper">
    <!-- header -->

          <header id="header">
          <h1>
          <%= link_to "decivo", root_path %>
          </h1>
          <% if (params.has_key?(:token) || params.has_key?(:decisionroom_token)) && !current_user.nil? then %>
            <nav id="nav">
              <ul>
                <li class="special">
                  <a href="#menu" class="menuToggle"><span>Hi <%= current_user.name %>,</span></a>
                  <div id="menu">
                    <ul>
                      <li><%= link_to "New Decision", new_decisionroom_path %></li>
                        <li>
                          <% if params.has_key?(:token) then %>
                          <%= link_to "Choose another user", decisionroom_user_member_selection_path(decisionroom_token: params[:token]) %>
                          <% elsif params.key?(:decisionroom_token) then %>
                          <%= link_to "Choose another user", decisionroom_user_member_selection_path(decisionroom_token: params[:decisionroom_token]) %>
                          <% end %>
                        </li> 
                        <li>
                          <%= link_to "Back", :back %>
                        </li>
                    </ul>
                  </div>
                </li>
              </ul>
            </nav>
            <%end%>
          </header>




    <!-- end of header -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <div style="text-align:center">
    <%= yield %>
    </div>
          <footer id="footer">
            <ul class="icons">
              <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
              <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
              <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
              <li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
            </ul>
            <ul class="copyright">
              <li>&copy; deciVo</li><li>Empower your Decisions</li>
            </ul>
          </footer>
  </body>
</html>