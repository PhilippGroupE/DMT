<!DOCTYPE html>
<html>
  <head>
    <title>DMT4</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="text-align:center;">
    <div class="main-body" style="width:65%;margin:0 auto;">
    <header>
  	  <p class="notice"><%= notice %></p>
  	  <p class="alert"><%= alert %></p>
  	  <% if user_signed_in? then %>
  	  Signed in as: <%= current_user.email%>
      <button><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></button>
  	  <% else %>
  	  <button><%= link_to "Sign In", new_user_session_path %></button>
  	  <button><%= link_to "Sign Up", new_user_registration_path %></button>
  	  <% end %>
    </header>
    </br>
    </br>
    <%= yield %>
    </div>
  </body>
</html>
