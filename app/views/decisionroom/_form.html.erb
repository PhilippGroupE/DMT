<% if @errors.present? %>
<div class="errors">
	<ul>
		<% @errors.each do |error| %>
		<li> <%= error %> </li>
		<% end %>
	</ul>
</div>
<% end %>

<%= form_for @decisionroom, url: {action: "create"}, html: {class: "nifty_form"} do |form| %>

<div class="form-group">
	<%= form.label :name %>
	<%= form.text_field :name %>
</div>

<div class="actions">
	<%= form.submit %>
</div>

<% end %>
